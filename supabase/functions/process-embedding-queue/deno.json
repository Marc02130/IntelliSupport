{
  "tasks": {
    "serve": "deno run --allow-net --allow-env index.ts"
  },
  "imports": {
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2",
    "openai": "https://esm.sh/openai@4.24.1",
    "@pinecone-database/pinecone": "https://esm.sh/@pinecone-database/pinecone@1.1.3"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "fmt": {
    "files": {
      "include": ["supabase/functions/"]
    },
    "options": {
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
} 